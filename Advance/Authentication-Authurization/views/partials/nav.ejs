<header class="bg-gradient-to-r from-red-600 to-red-800 text-black p-4 shadow-lg">
  <nav class="container mx-auto flex justify-between items-center">
    <div class="flex space-x-6">
      <a
        href="/"
        class="<%= currentPage === 'Home' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Home</a
      >

      <% if(isLoggedIn){ %>
      <a
        href="/favorites"
        class="<%= currentPage === 'favorites' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Favorites</a
      >
      <a
        href="/bookings"
        class="<%= currentPage === 'bookings' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Bookings</a
      >

      <a
        href="/host/add-home"
        class="<%= currentPage === 'addHome' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Add Home</a
      >
      <a
        href="/host/host-home-list"
        class="<%= currentPage === 'host-home-list' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Host Home List</a
      >
      <%}%>
    </div>

    <div class="flex space-x-4 items-center">
      <% if(!isLoggedIn){ %>
      <a
        href="/login"
        class="<%= currentPage === 'login' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Login</a
      >
      <a
        href="/signup"
        class="<%= currentPage === 'signup' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >Signup</a
      >
      <%}else{%>
      <form action="/logout" method="post">
        <button
          type="submit"
          class="<%= currentPage === 'logout' ? 'bg-red-700 font-semibold' : 'hover:bg-red-700' %> py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105"
        >
          Logout
        </button>
      </form>
      <%}%>
    </div>
  </nav>
</header>